<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entry_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:minHeight="75dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/keyline_1">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/entry_card_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/keyline_4"
            android:layout_marginStart="@dimen/keyline_4"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sample_avatar"
            app:tint="?colorSurface"
            app:tintMode="multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/entry_card_expand_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_0"
            android:onClick="onEntryCardExpandClick"
            app:icon='@drawable/ic_expand_more'
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/entry_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_4"
            android:text="@string/entry_title"
            android:textAppearance="?textAppearanceHeadline6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/entry_card_avatar" />
        <TextView
            android:id="@+id/entry_card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_4"
            android:text="@string/entry_subtitle"
            android:textAppearance="?textAppearanceSubtitle1"
            app:layout_constraintTop_toBottomOf="@+id/entry_card_title"
            app:layout_constraintStart_toEndOf="@id/entry_card_avatar" />
        <TextView
            android:id="@+id/entry_card_body_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:text="@string/entry_body"
            android:textAppearance="?textAppearanceBody2"
            android:textAlignment="viewStart"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/entry_card_body_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entry_card_subtitle" />

        <TextView
            android:id="@+id/entry_card_body_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:text="@string/entry_body"
            android:textAppearance="?textAppearanceBody2"
            android:textAlignment="viewEnd"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/entry_card_body_left"
            app:layout_constraintBaseline_toBaselineOf="@+id/entry_card_body_left" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/entry_card_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_entry_remove"
            android:layout_marginStart="@dimen/keyline_0"
            android:layout_marginEnd="@dimen/keyline_2"
            android:visibility="gone"
            android:onClick="onJournalEntryRemoveButtonClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entry_card_body_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
