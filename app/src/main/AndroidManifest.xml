        android:supportsRtl="true"
        android:theme="@style/MyTheme.DayNight">

        <!-- PROFILE ACTIVITIES -->
        <activity android:name=".views.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
