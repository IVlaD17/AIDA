        <activity android:name=".views.JournalManageActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <!-- NUTRITIONAL CALCULATOR ACTIVITIES -->
        <activity android:name=".views.CalculatorActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".views.CalculatorManageActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <!-- OTHER ACTIVITIES -->
        <activity android:name=".views.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.FoodsDatabaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <!-- LEGACY ACTIVITIES -->
        <activity android:name=".views.legacy.StartActivity" >

        </activity>
        <activity android:name=".views.legacy.MainActivity" >

        </activity>
